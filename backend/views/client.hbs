{{> header }}
<main>
  <h1 class="text-center">Información del Cliente</h1>
    <form action="/admin/clientes/{{client._id}}?_method=PUT" class="container form-product" method="POST" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="nombre">Nombre</label>
          <input type="text" class="form-control" value="{{client.firstname}}" name="firstname" placeholder="Nombre">
        </div>
        <div class="form-group col-md-6">
          <label for="apellidos">Apellido/s</label>
          <input type="text" class="form-control" value="{{client.lastname}}" name="lastname" placeholder="Apellido/s">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="email">Email</label>
          <input type="text" class="form-control" value="{{client.email}}" name="email" placeholder="Correo electrónico">
        </div>
        <input type="text" class="form-control hidden" name="id" value="{{client._id}}">
            <div class="form-row">
        <div class="form-group col-md-3">
          {{#if client.active}}
          <label for="activo">Usuario activo</label>
            <input type="radio" id="active" name="active" value="true" checked>
          <label for="inactivo">Usuario no activo</label>
            <input type="radio" id="inactive" name="active" value="false">
          {{else}}
          <label for="activo">Usuario activo</label>
            <input type="radio" id="active" name="active" value="true">
          <label for="inactivo">Usuario no activo</label>
            <input type="radio" id="inactive" name="active" value="false" checked>
          {{/if}} 
        </div>
        <div class="form-group col-md-3">
          <div class="form-group col-md-12">
            <input type="submit" class="form-control btn" id="update" data-id="{{client._id}}" value="Actualizar">
          </div>
        </div>
      </div>
      {{#if message}}
      <div class="form-row">
        <div class="col-md-12 alert alert-success text-center" role="alert">{{ message }}</div>
      </div>
      {{/if}}
  </form>
</main>